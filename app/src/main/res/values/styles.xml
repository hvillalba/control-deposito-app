<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="textColorPrimary">#2C3E50</item>-->
        <!--<item name="windowBackground">#ffffff</item>-->
    </style>

    <style name="textNormalWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="dialogFull" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppOverlayTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
